<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_margin="@dimen/dimen_10"
    android:background="@drawable/post_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ppReplayView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/post_pp_circle"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"/>

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/ppReplayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="عمرو طارق"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/online_circle"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="منذ 2 ساعة"/>
    </LinearLayout>

    <TextView
        android:id="@+id/postView"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@id/ppReplayView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"
        android:textSize="10sp"
        android:maxLines="6"/>

    <ImageView
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/postView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_below="@id/lineView"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:drawableStart="@drawable/ic_star"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:text="@string/like"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/likeReplayButton"
            android:layout_marginStart="@dimen/dimen_40"/>


        <Button
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:text="@string/replay"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_comment"
            android:layout_marginEnd="@dimen/dimen_40"/>

    </RelativeLayout>

</RelativeLayout>
